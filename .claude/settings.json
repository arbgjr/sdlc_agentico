{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "version": "1.0",
  "project": {
    "name": "mice_dolphins",
    "description": "SDLC Agentico - Sistema de desenvolvimento de software orientado por agentes"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-commit.sh"
          }
        ]
      },
      {
        "matcher": "Bash(git push*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-gate.sh auto"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit(*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "black \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "black \"$TOOL_INPUT_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Edit(docs/adr/*.md)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ADR atualizado - lembre de atualizar o index'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/detect-phase.sh"
          }
        ]
      }
    ]
  },
  "agents": {
    "default_model": "sonnet",
    "orchestrator_model": "opus",
    "available_agents": [
      "orchestrator",
      "intake-analyst",
      "compliance-guardian",
      "domain-researcher",
      "doc-crawler",
      "rag-curator",
      "product-owner",
      "requirements-analyst",
      "ux-writer",
      "system-architect",
      "adr-author",
      "data-architect",
      "threat-modeler",
      "delivery-planner",
      "code-author",
      "code-reviewer",
      "test-author",
      "qa-analyst",
      "security-scanner",
      "performance-analyst",
      "release-manager",
      "cicd-engineer",
      "change-manager",
      "incident-commander",
      "rca-analyst",
      "metrics-analyst",
      "observability-engineer",
      "playbook-governance"
    ]
  },
  "sdlc": {
    "phases": [
      {
        "number": 0,
        "name": "Preparation",
        "agents": [
          "intake-analyst",
          "compliance-guardian"
        ]
      },
      {
        "number": 1,
        "name": "Discovery",
        "agents": [
          "domain-researcher",
          "doc-crawler",
          "rag-curator"
        ]
      },
      {
        "number": 2,
        "name": "Requirements",
        "agents": [
          "product-owner",
          "requirements-analyst",
          "ux-writer"
        ]
      },
      {
        "number": 3,
        "name": "Architecture",
        "agents": [
          "system-architect",
          "adr-author",
          "data-architect",
          "threat-modeler"
        ]
      },
      {
        "number": 4,
        "name": "Planning",
        "agents": [
          "delivery-planner"
        ]
      },
      {
        "number": 5,
        "name": "Implementation",
        "agents": [
          "code-author",
          "code-reviewer",
          "test-author"
        ]
      },
      {
        "number": 6,
        "name": "Quality",
        "agents": [
          "qa-analyst",
          "security-scanner",
          "performance-analyst"
        ]
      },
      {
        "number": 7,
        "name": "Release",
        "agents": [
          "release-manager",
          "cicd-engineer",
          "change-manager"
        ]
      },
      {
        "number": 8,
        "name": "Operations",
        "agents": [
          "incident-commander",
          "rca-analyst",
          "metrics-analyst",
          "observability-engineer"
        ]
      }
    ],
    "gates": {
      "directory": ".claude/skills/gate-evaluator/gates",
      "enforce": true
    },
    "complexity_levels": {
      "0": {
        "name": "Quick Flow",
        "description": "Bug fix, typo, small change",
        "phases": [
          5,
          6
        ],
        "time_estimate": "~5 min"
      },
      "1": {
        "name": "Feature",
        "description": "Feature in existing service",
        "phases": [
          2,
          5,
          6
        ],
        "time_estimate": "~15 min"
      },
      "2": {
        "name": "BMAD Method",
        "description": "New product or service",
        "phases": [
          0,
          1,
          2,
          3,
          4,
          5,
          6,
          7
        ],
        "time_estimate": "~30 min"
      },
      "3": {
        "name": "Enterprise",
        "description": "Compliance, multi-team, critical",
        "phases": [
          0,
          1,
          2,
          3,
          4,
          5,
          6,
          7,
          8
        ],
        "time_estimate": "variable",
        "human_approval_at_all_gates": true
      }
    }
  },
  "integrations": {
    "github": {
      "copilot_coding_agent": true,
      "create_issues": true,
      "create_prs": true
    },
    "spec_kit": {
      "enabled": true,
      "templates_dir": ".specify/templates"
    }
  },
  "memory": {
    "directory": ".claude/memory",
    "rag_corpus": ".claude/rag",
    "persist_decisions": true,
    "persist_learnings": true
  }
}